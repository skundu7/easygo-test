{
    "default": {
        "paths": [
            "src/tests/features/apitest.feature",
            "src/tests/features/login.feature"
        ],
        "require": [
            "src/tests/steps/*.ts",
            "src/hooks/*.ts"
        ],
        "tags": "@api or @ui",  
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "format": [
            [
                "html",
                "cucumber-report.html"
            ],
            "summary",
            "progress-bar",
            "json:./cucumber-report.json"
        ],
        "requireModule":[
            "ts-node/register"
        ]
    
    }
}